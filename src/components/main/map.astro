---
import Menu from "../main/menu.astro";

import { Image } from "astro:assets";
import a from "../../img/a.svg";
import b from "../../img/b.svg";
import leftDirection from "../../img/leftDirection.svg";
import call from "../../img/call.svg";
// import atob from "../img/aAndB.svg";
---

<div class="fluid bg-gray">
    <div class="container">
        <div class="box-up">
            <div class="road-direction">
                <Image src={leftDirection} alt="Left" />
                <div class="direction-text-box">
                    <p class="p700-42">200м</p>
                    <p class="p400-28">ул. Абая</p>
                </div>
            </div>
            <div class="btn-side">
                <Menu />

                <button class="btm-none-dec" type="button">
                    <Image src={call} alt="call" />
                </button>
            </div>
        </div>
        <div class="box">
            <div class="info">
                <div class="left">
                    <a href="" class="p700-24">Доехали</a>
                    <div class="address">
                        <div class="flex-line">
                            <Image src={a} alt="A" />
                            <p>Наурызбай батыра 124</p>
                        </div>
                        <div class="line"></div>
                        <div class="flex-line">
                            <Image src={b} alt="B" />
                            <p>Самал-2</p>
                        </div>
                    </div>
                </div>
                <div class="time-info">
                    <p class="p700-36">18 минут</p>
                    <div class="under-info">
                        <p class="p400-24">5 км</p>
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="6"
                            height="6"
                            viewBox="0 0 6 6"
                            fill="none"
                        >
                            <circle cx="3" cy="3" r="3" fill="#282828"></circle>
                        </svg>
                        <p class="p400-24">15:51</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        background: #adadad;
        height: 100vh;
        margin: auto;
        display: flex;
        align-items: center;
        flex-direction: column;
        justify-content: space-between;
    }
    .bg-gray {
        background: #dfdfdf;
    }

    .box-up {
        display: flex;
        justify-content: space-between;
        width: 100%;
        align-items: flex-start;
        margin-top: 20px;
    }
    .road-direction {
        display: flex;
        align-items: center;
        border-radius: 10px;
        background: #fff;
        padding: 4px 16px 4px 8px;
    }

    .btn-side {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        gap: 10px;
        align-items: center;
    }
    .btm-none-dec {
        background: none;
        border: none;
    }
    .box {
        width: 100%;
    }
    .info {
        height: 100px;
        border-radius: 30px;
        background: #fff;

        padding: 30px 60px 30px 30px;
        margin-bottom: 50px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    .left {
        display: flex;
        align-items: center;
        gap: 30px;
    }
    .p700-24 {
        border-radius: 30px;
        background: #007aff;
        color: #fff;
        font-family: "Proxima Nova";
        font-size: clamp(1rem, 2.5vw, 2.4rem);
        font-style: normal;
        font-weight: 700;
        line-height: normal;
        letter-spacing: 2.4px;
        text-transform: uppercase;
        padding: 30px 88px;
        text-decoration: none;
    }
    .address {
        border-radius: 10px;
        background: #f6f6f6;

        padding: 22px;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .flex-line {
        display: flex;
        align-items: center;
        gap: 20px;
    }
    .line {
        width: 100%;
        height: 1px;
        background-color: #e1e1e1;
    }
    p {
        margin-block-start: 0em;
        margin-block-end: 0em;
    }
    .p700-36 {
        color: #84b41e;
        font-family: "Proxima Nova";
        font-size: clamp(1.6rem, 2.5vw, 3.6rem);
        font-style: normal;
        font-weight: 700;
        line-height: normal;
        letter-spacing: 2.4px;
        text-transform: uppercase;
    }
    .under-info {
        display: flex;
        gap: 8px;
        align-items: center;
    }

    .p400-24 {
        color: #282828;
        font-size: 24px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;
    }
</style>
